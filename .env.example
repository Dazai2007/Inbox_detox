# Environment Configuration
DATABASE_URL=postgresql+psycopg2://inbox:inbox@localhost:5432/inbox_detox
SECRET_KEY=your-super-secret-key-change-this-in-production # Use >=32 chars, random in production
OPENAI_API_KEY=your-openai-api-key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
ENVIRONMENT=development # one of: development, staging, production
ALLOWED_HOSTS=localhost,127.0.0.1
# In production, set explicit CORS origins (comma-separated). Example:
# CORS_ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com
# In development, you can leave it empty to allow all origins.
CORS_ALLOWED_ORIGINS=
COOKIE_SAMESITE=lax # one of: lax, strict, none (none requires Secure over HTTPS)
# Rate limiting per minute
RATE_LIMIT_PER_MINUTE=10
# Free plan monthly quota
FREE_MONTHLY_ANALYSIS_LIMIT=20
# Auto-migrate (Alembic) on app startup (optional)
AUTO_MIGRATE_ON_STARTUP=false
# PYTHON_EXECUTABLE used to run alembic (optional override)
# On Windows venv default would be something like: C:\\path\\to\\repo\\venv\\Scripts\\python.exe
# PYTHON_EXECUTABLE=

# Backups configuration
# Where to store backups (relative or absolute path)
BACKUP_DIR=backups
# How many recent backups to keep
BACKUP_RETENTION=7

# CAPTCHA (Cloudflare Turnstile)
# Enable to require human verification on auth flows
CAPTCHA_ENABLED_LOGIN=false
CAPTCHA_ENABLED_REGISTER=false
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# Development flags
# Allow login for unverified emails (do NOT enable in production)
ALLOW_UNVERIFIED_LOGIN=false

# CAPTCHA (Cloudflare Turnstile)
# Enable these to require human verification on auth endpoints
CAPTCHA_ENABLED_LOGIN=false
CAPTCHA_ENABLED_REGISTER=false
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=